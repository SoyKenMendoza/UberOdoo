<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="trip_selection" name="Custom template">

        <t t-call="website.layout">
            <div id="wrap" class="oe_structure oe_empty trip-selection-uber">

                <section class="s_website_form" data-vcss="001" data-snippet="s_website_form">

                    <header>
                        <h1>
                            Bienvenido
                        </h1>
                        <h4>
                            Vamos Bien
                        </h4>
                    </header>

                    <div class="container">
                        <form id="trip_selection_form" action="/website/form/" method="post" enctype="multipart/form-data" class="o_mark_required" data-mark="*" data-model_name="uber_route" data-success-mode="redirect" data-success-page="/" data-pre-fill="true">

                            <div class="form-group s_website_form_field">
                                <label for="name">Nombre<span class="s_website_form_mark">*</span></label>
                                <input type="text" class="form-control s_website_form_input" name="name" id="name" required="true"/>
                            </div>

                            <div class="form-group s_website_form_field">
                                <label for="phone">Tel√©fono<span class="s_website_form_mark">*</span></label>
                                <input type="text" class="form-control s_website_form_input" name="phone" id="phone" required="true"/>
                            </div>

                            <div class="form-group s_website_form_field">
                                <label for="email">Correo<span class="s_website_form_mark">*</span></label>
                                <input type="text" class="form-control s_website_form_input" name="email" id="email" required="true"/>
                            </div>

                            <div class="mb-0 py-2 col-12 s_website_form_submit" data-name="Submit Button">
                                <div style="width: 200px;" class="s_website_form_label"/>
                                <a href="#" role="button" class="btn btn-primary btn-lg s_website_form_send">Submit</a>
                                <span id="s_website_form_result"></span>
                            </div>

                        </form>
                    </div>
                </section>
            </div>
        </t>

    </template>

</odoo>